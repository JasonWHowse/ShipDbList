                <tr>
                    <th>Ship Name</th>
                    <th>Weight</th>
                    <th>Hard Points</th>
                    <th>Type</th>
                    <th>Class</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

